<div id="exercise" class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                {{>messages}}
                <h3 id="title" class="text-center mb-3"><i class="fas fa-gamepad"></i> List of games</h3>
                <p>
                    This page contains all of the implemented games.
                    You can get to a game by clicking on the game link.
                </p>
                <dl>
                    <dt><i class="fas fa-angle-right"></i><a href="/"> Hello A+</a></dt>
                    {{#each this}}
                    {{#if title}}
                    <dt><i class="fas fa-angle-right"></i><a href="/games/id/{{_id}}"> {{title}}</a></dt>
                    {{/if}}
                    {{/each}}
                </dl>
            </div>
        </div>
    </div>
</div>
